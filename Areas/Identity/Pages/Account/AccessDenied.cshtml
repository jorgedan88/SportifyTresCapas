@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Acceso Denegado";
}

<h1 class="text-danger">@ViewData["Title"]</h1>

<div class="card" style="max-width: 600px; margin: 2rem auto; background-color: #f8d7da; border-color: #f5c6cb; padding: 1.5rem; border-radius: 10px;">
    <div class="card-body text-center">
        <h2 class="text-danger">No tienes permiso para acceder a esta pantalla.</h2>
        <p class="text-muted">Por favor, contacta al administrador si crees que esto es un error.</p>
        <a href="javascript:history.back()" class="btn btn-outline-danger rounded-pill">Volver</a>
    </div>
</div>
