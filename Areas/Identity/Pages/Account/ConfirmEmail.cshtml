@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmación de Correo Electrónico";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.StatusMessage))
                {
                    <p class="text-success">
                        <i class="fas fa-check-circle"></i> @Model.StatusMessage
                    </p>
                }
                else
                {
                    <p class="text-danger">
                        <i class="fas fa-exclamation-circle"></i> Hubo un problema al confirmar tu correo. Por favor, intenta nuevamente o contacta al soporte.
                    </p>
                }
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-page="/Index" class="btn btn-outline-light btn-bold rounded-pill">
        Volver a Inicio
    </a>
</div>
