@model IEnumerable<Sportify_back.Models.Teachers>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Profesores</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-light">Crear nuevo Profesor</a>
</p>

<table class="table-custom">
    <thead>
        <tr>
            <th>Nombre y Apellido</th>
            <th>DNI</th>
            <th>Correo electrónico</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Actividad</th>
            <th>Activa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Dni)</td>
            <td>@Html.DisplayFor(modelItem => item.Mail)</td>
            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
            <td>@Html.DisplayFor(modelItem => item.Address)</td>
            <td>@Html.DisplayFor(modelItem => item.Activities.NameActivity)</td>
            <td>@Html.DisplayFor(modelItem => item.Active)</td>
            <td>
                <div class="action-buttons">
                    <a asp-action="Details" asp-route-id="@item.Id" class="action-link details-link">
                        <img src="~/images/search.png" class="small-icon" alt="Icono de detalle">
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="action-link edit-link">
                        <img src="~/images/edit.png" class="small-icon" alt="Icono de editar">
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="action-link delete-link">
                        <img src="~/images/bin.png" class="small-icon" alt="Icono de eliminar"> 
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
