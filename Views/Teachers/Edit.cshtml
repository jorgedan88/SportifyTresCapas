@model Sportify_back.Models.Teachers

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Profesor</h1>

<div class="d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="card text-white" style="max-width: 400px; width: 100%;">
        <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="form-label text-white"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dni" class="form-label text-white"></label>
                <input asp-for="Dni" class="form-control" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="form-label text-white"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="form-label text-white"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="form-label text-white"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivitiesId" class="form-label text-white"></label>
                <select asp-for="ActivitiesId" class="form-control" asp-items="ViewBag.ActivitiesId"></select>
                <span asp-validation-for="ActivitiesId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label text-white">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                    <button type="submit" class="btn btn-primary rounded-pill me-2">Guardar</button>
            </div>
        </form>
    </div>
</div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-outline-light btn-bold rounded-pill">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
